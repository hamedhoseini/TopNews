<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="com.mihahoni.topnews.data.model.ArticleItem" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewNews"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_image"
                    app:imageUrl="@{article.imageUrl}"
                    app:layout_constraintBottom_toTopOf="@+id/textViewNewsSource"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="5.5" />

                <TextView
                    android:id="@+id/textViewNewsSource"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@{article.source.name}"
                    android:textColor="@color/text_color_black"
                    app:layout_constraintBottom_toTopOf="@+id/textViewNewsTitle"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewNews"
                    app:layout_constraintVertical_weight="1" />

                <TextView
                    android:id="@+id/textViewNewsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@{article.title}"
                    android:textColor="@color/text_color_black"
                    android:textStyle="bold"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSizeBig"
                    app:layout_constraintBottom_toTopOf="@+id/textViewNewsDescription"
                    app:layout_constraintTop_toBottomOf="@+id/textViewNewsSource"
                    app:layout_constraintVertical_weight="1.5" />


                <TextView
                    android:id="@+id/textViewNewsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@{article.description}"
                    android:ellipsize="end"
                    android:lines="3"
                    android:textColor="@color/text_color_gray"
                    app:layout_constraintBottom_toTopOf="@+id/textViewNewsDate"
                    app:layout_constraintTop_toBottomOf="@+id/textViewNewsTitle"
                    app:layout_constraintVertical_weight="2" />

                <TextView
                    android:id="@+id/textViewNewsDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@{article.publishedAt}"
                    android:textColor="@color/text_color_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewNewsDescription"
                    app:layout_constraintVertical_weight="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
